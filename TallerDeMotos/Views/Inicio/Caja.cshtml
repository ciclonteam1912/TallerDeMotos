    <h1>Caja</h1>
    <div class="row">
        <div class="col-lg-3 col-md-3">
            <a href="~/Caja/NuevaCaja">
                <div class="panel panel-primary">

                    <div class="panel-heading text-center">
                        <div class="row">
                            <i class="fa fa-money fa-5x"></i>
