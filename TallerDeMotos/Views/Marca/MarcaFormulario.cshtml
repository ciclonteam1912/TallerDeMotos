@model TallerDeMotos.Models.ModelosDeDominio.Marca
@{
    ViewBag.Title = Model.Titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_MenuVertical")
<div class="col-lg-9 col-md-9 col-xs-11" id="contenido">
    <h2>@Model.Titulo</h2>

    @using (Html.BeginForm("GuardarMarca", "Marca"))
    {
        <div class="panel panel-default">
            <div class="panel-heading">@Model.Titulo</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Nombre) <span class="asterisco">*</span>
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ingrese Nombre de la Marca...", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.Nombre)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Representante)
                            @Html.TextBoxFor(m => m.Representante, new { @class = "form-control", placeholder = "Ingrese el Representante de la Marca...", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.Representante)
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.PaisDeOrigen, new { id = "labelFecha" })
                            @Html.TextBoxFor(m => m.PaisDeOrigen, new { @class = "form-control", placeholder = "Ingrese el país de origen de la Marca...", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.PaisDeOrigen)

                        </div>
                    </div>
                </div>
                @Html.HiddenFor(m => m.Id)
                @Html.AntiForgeryToken()
            </div>
            <div class="panel-footer">
                <button class="btn btn-primary">Guardar</button>
            </div>
        </div>
    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#menuTaller").addClass('active');
        });
    </script>
}

