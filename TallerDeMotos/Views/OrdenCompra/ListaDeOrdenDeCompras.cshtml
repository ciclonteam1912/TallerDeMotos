
@{
    ViewBag.Title = "Lista De Orden De Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_MenuVertical")
<div class="col-lg-9 col-md-9 col-xs-11" id="contenido">
    <h2>Lista De Orden De Compras</h2>
    <div id="example">
        <div id="grid"></div>        
    </div>
</div>

@section Scripts{
    <script>
        kendo.culture().numberFormat.currency.symbol = "₲";
        $(document).ready(function () {
            var dataSource = new kendo.data.DataSource({
                autoSync: false,
                transport: {
                    read: {
                        url: "/api/ordenCompras",
                        dataType: "json"
                    },
                    update: {
                        url: "/OrdenCompra/EditarOrdenCompra",
                         dataType: "json",
                         type: "post"
                    }
                },
                pageSize: 6,
                serverPaging: false,
                serverSorting: false,
                schema: {
                    model: {
                        id: "Id",                        
                        fields: {
                            Id: { editable: false },
                            OrdenCompraNumero: {
                                editable: false
                            },
                            FechaDeEmision: {
                                template: "#= kendo.toString(kendo.parseDate(FechaDeEmision), 'MM/dd/yyyy HH:mm tt')#",
                                editable: false
                            },
                            FormaPago: {
                                editable: false
                            },
                            Proveedor: {
                                editable: false
                            },
                            SubTotal: {
                                editable: false
                            },
                            Estado: {
                                nullable: false
                            }
                        }
                    }
                }
            });
            
            $("#grid").kendoGrid({
                dataSource: dataSource,
                toolbar: ["save", "cancel"],
                height: 550,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                detailInit: detailInit,
                columns: [
                    {
                        template: "<a href='/OrdenCompra/EditarOrdenCompraDetalle/ #: Id #' class='btn-link glyphicon glyphicon-edit' title='Editar'></a>",
                        field: "Id",
                        title: "&nbsp;",
                        filterable: false,
                        sortable: false,
                        width: 50,
                        attributes: {
                            style: "text-align: center"
                        }
                    },
                    {
                        field: "OrdenCompraNumero",
                        title: "Nro. Orden de Compra",
                        width: "90px"
                    },
                    {
                        field: "FechaDeEmision",
                        title: "Fecha de Emisión",
                        template: "#= kendo.toString(kendo.parseDate(FechaDeEmision), 'MM/dd/yyyy HH:mm tt')#",
                        width: "110px"
                    },
                    {
                        field: "FormaPago",
                        title: "Forma de Pago",
                        width: "110px",
                        template: "#=FormaPago.Nombre#"
                    },
                    {
                        field: "Proveedor",
                        title: "Proveedor",
                        width: "110px",
                        template: "#=Proveedor.RazonSocial#"
                    },
                    {
                        field: "SubTotal",
                        title: "Sub Total",
                        culture: "es-PY",
                        format: "{0:c0}",
                        width: "110px"
                    },
                    {
                        field: "Estado",
                        title: "Estado",
                        width: "110px",
                        editor: estadoDropDownEditor, template: "#=Estado.Descripcion#"
                    }
                ],
                editable: true
            });
            //console.log($('#grid').data('kendoGrid'));
            //$("#grid").data("kendoGrid").dataSource.refresh();

            $(".k-grid-toolbar").append('<a href="#" class="btn btn-primary"><i class="fa fa-plus icono izquierda"></i><span class="button-text">Registrar Factura</span></a>');
        });

        function estadoDropDownEditor(container, options) {
            $('<input required name="' + options.field + '"/>')
                .appendTo(container)
                .kendoDropDownList({
                    autoBind: false,
                    dataTextField: "Descripcion",
                    dataValueField: "Id",
                    dataSource: {
                        transport: {
                            read: {
                                url: "/api/estados",
                                dataType: "json"
                            }
                        }
                    }
                });
        }

        function detailInit(e) {
            console.log(e);
            $("<div/>").appendTo(e.detailCell).kendoGrid({
                dataSource: {
                    transport: {
                        read: {
                            url: "/api/ordenCompraDetalles",
                            dataType: "json"
                        }
                    },
                    serverPaging: false,
                    serverSorting: false,
                    serverFiltering: false,
                    pageSize: 10,
                    filter: { field: "OrdenCompraId", operator: "eq", value: e.data.Id }
                },
                scrollable: true,
                sortable: true,
                pageable: true,
                columns: [
                    { field: "Id", title: "Cod. Detalle", width: "110px" },
                    { field: "ProductoId", title: "Producto Cod.", width: "110px" },
                    { field: "Producto.Descripcion", title: "Descripción", width: "150px" },
                    { field: "Cantidad", title: "Cantidad", width: "100px" },
                    { field: "Producto.PrecioCosto", title: "Precio Unitario", width: "110px", format: "{0:n}" },
                    { field: "Producto.Iva", title: "Iva", width: "60px" },
                    { field: "Total", title: "Total", width: "110px", format: "{0:n}" }
                ]
            });
        }
    </script>    
}

