@model TallerDeMotos.Models.ModelosDeDominio.ServicioBasico
@{
    ViewBag.Title = Model.Titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_MenuVertical")
<div class="col-lg-9 col-md-9 col-xs-11" id="contenido">
    <h2>@Model.Titulo</h2>

    @using (Html.BeginForm("GuardarServicioBasico", "ServicioBasico"))
    {
        <div class="panel panel-default">
            <div class="panel-heading">@Model.Titulo</div>
            <div class="panel-body">
                <div class="row">
                    <h4>@Html.ValidationSummary(true, "¡Por favor solucione los siguientes errores!")</h4>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(fp => fp.Nombre)
                            @Html.TextBoxFor(fp => fp.Nombre, new { @class = "form-control", placeholder = "Nombre del Servicio Básico...", maxlength = 50, autocomplete = "off" })
                            @Html.ValidationMessageFor(fp => fp.Nombre)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(fp => fp.Descripcion)
                            @Html.TextAreaFor(fp => fp.Descripcion, new { @class = "form-control", placeholder = "Descripción del Servicio Básico...", maxlength = 255, autocomplete = "off" })
                            @Html.ValidationMessageFor(fp => fp.Descripcion)
                        </div>                        
                    </div>                    
                </div>
                @Html.HiddenFor(fp => fp.Id)
                @Html.AntiForgeryToken()
            </div>
            <div class="panel-footer">
                <button class="btn btn-primary">Guardar</button>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#menuCompras").addClass('active');
        })
    </script>
}

